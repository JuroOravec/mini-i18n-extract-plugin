{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es2017", "es7", "es6", "DOM", "ES5", "ESNext", "DOM.Iterable", "ScriptHost"],
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "outDir": "dist",
    "removeComments": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules", "dist", "**/__tests__/**/*"],
  "include": ["src/**/*"]
}
